<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %> |
    <%= @friend.phone %> |
    <%= @friend.twitter %>
  </p>
  <br/>
  <p class="lead">
    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= button_to 'Delete', @friend, form: {data: { turbo_confirm: 'Are you sure?' } }, method: :delete, class: "btn btn-danger" %>
    <%= link_to "Back", friends_path, class:"btn btn-dark" %>
  </p>
</div>

